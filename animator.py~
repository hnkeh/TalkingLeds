from sense_hat import SenseHat
from time import sleep
from random import randint
from eyes import *
from mouth import *

class Animator():
    def __init__(self, background_color, pupil_color, eye_color,  teeth_color, tongue_color, lips_color):
        #Values.
        self.eyes = Eyes(pupil_color, eye_color, background_color)
        self.mouth = Mouth(teeth_color, tongue_color, lips_color, background_color)
        self.sense = Self.SenseHat()
        self.sense.low_light = True
        
    #Private functions.
    #Convert matris to self.sensehat grid.
    def _matris_converter(self, matris):
        output_list = []

        for x in range(8):
            for y in range(8):
                output_list.append(matris[x][y])

        return output_list
    
    #Public functions.
    #Reset board.
    def reset(self):
        self.sense.set_pixels(_matris_converter(black_matris))

    #Idle eye animation.
    def idle_animation(self):
        pass
        
    #Animates face to fit letter.
    def read_letter(self, letter):
        
        spiral_matris = eyes.open_eyes() + mouth.letter + _letter()
        self.sense.set_pixels(_matris_converter(spiral_matris))
